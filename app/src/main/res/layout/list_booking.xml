<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_booking_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="booking_number"/>

            <TextView
                android:id="@+id/txt_date"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_booking_number"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="date"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_below="@+id/txt_date"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="time"/>

            <TextView
                android:id="@+id/txt_booking_quantity"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="booking_quantity"/>

            <TextView
                android:layout_below="@+id/txt_booking_number"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="room_name"/>

            <TextView
                android:id="@+id/txt_price"
                android:layout_below="@+id/txt_time"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="booking_price"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>